[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User=antispam
Group=www-data
WorkingDirectory=/home/antispam/AntiSpam/django-backend
ExecStart=gunicorn \
          --access-logfile - \
          --workers 3 \
          --bind unix:django-backend.sock \
          api_crud.wsgi:application

[Install]
WantedBy=multi-user.target
